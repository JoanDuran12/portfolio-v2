---
const { title, description, link, bulletPoints, date } = Astro.props;
---

<script>
  // This script toggles (show/hide) the visibility of the bullet points and rotates the arrow icon accordingly
  document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll(".experience-content").forEach((content) => {
      const toggleTrigger = content.querySelector(".toggle-content");
      const bulletPoints = content.querySelector(".bullet-points");
      const expandIcon = content.querySelector(".expand-icon");

      toggleTrigger?.addEventListener("click", () => {
        bulletPoints?.classList.toggle("hidden");
        expandIcon?.classList.toggle("rotate-180");
      });
    });
  });
</script>

<div class="experience-content">
  <div class="toggle-content hover:opacity-80">
    <div
      class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
    >
    </div>
    <time class="mb-1 text-sm font-normal leading-none text-sky-100/80">
      {date}
    </time>
    <h3
      class="toggle-content flex items-center gap-2 text-lg font-semibold text-yellow-200 mb-2 cursor-pointer"
    >
      {title}
      <svg
        class="expand-icon w-4 h-4 transition-transform"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 9l-7 7-7-7"></path>
      </svg>
    </h3>
    <p class="mb-4 text-base font-normal text-gray-200 text-pretty description">
      {description}
    </p>
    <ul
      class="list-disc list-outside pl-8 text-gray-200 bullet-points hidden transition-all duration-300"
    >
      {bulletPoints.map((point: String) => <li class="mb-1">{point}</li>)}
    </ul>
  </div>
</div>

{
  link && (
    <a
      href={link}
      class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700"
    >
      Learn more...{" "}
      <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </a>
  )
}
