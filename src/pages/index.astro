---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SectionContainer from "../components/SectionContainer.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import LinkedlnIcon from "../components/icons/Linkedln.astro";
import BriefcaseIcon from "../components/icons/Briefcase.astro";
import CodingIcon from "../components/icons/Coding.astro";
import UserIcon from "../components/icons/User.astro";
import StackIcon from "../components/icons/Stack.astro";
import FileIcon from "../components/icons/File.astro";
import MailIcon from "../components/icons/MailForward.astro";
import SocialPill from "../components/SocialPill.astro";
import Experience from "../components/Experience.astro";
import Projects from "../components/Projects.astro";
import Skills from "../components/Skills.astro";
import About from "../components/About.astro";
---

<Layout title="Joan Duran' Portfolio" description="Aspiring Software Engineer">
  <main class="px-4">
    <SectionContainer class="py-44 pb-24">
      <div class="flex">
        <img
          class="rounded-full size-24 mb-4"
          src="/headshot.png"
          alt="Profile Picture"
        />
        <div class="flex justify-center items-center">
          <Badge>Software Developer</Badge>
        </div>
      </div>
      <h1
        class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hey, I'm Joan Duran
      </h1>
      <!-- Need to revisit this part in the future -->
      <h2
        class="text-l lg:text-xl text-wrap max-w-[750px] [&>strong]:text-yellow-200"
      >
        I’m a Senior Computer Science student at Wentworth Institute of
        Technology.
        <strong>Seeking Full-Time Software Engineer Positions.</strong>
        <br /><br />
        Love❤️min-maxing my code, and I’m always looking for new challenges and opportunities
        to grow.
        <strong
          >Always building, always curious, always happy to connect — feel free
          to reach out!
        </strong>
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill href="https://www.linkedin.com/in/joan-duran">
          <LinkedlnIcon class="size-4 md:size-6" /> Linkedln
        </SocialPill>
        <SocialPill href="https://github.com/joanduran12">
          <GitHubIcon class="size-4 md:size-6" /> GitHub
        </SocialPill>
        <SocialPill href="mailto:durancuevasj@wit.edu">
          <MailIcon class="size-4 md:size-6" /> joanduran.dev@gmail.com
        </SocialPill>
        <SocialPill
          href="https://drive.google.com/file/d/1uoJ0m5mJHkUjGd2CnFtuXM2tVdZf_24S/view?usp=sharing"
        >
          <FileIcon class="size-4 md:size-6" /> Resume
        </SocialPill>
      </nav>
    </SectionContainer>
    <SectionContainer id="experience">
      <h2 class="text-3xl font-semibold mb-8 flex gap-x-3 items-center">
        <BriefcaseIcon class="size-8" />
        My Work Experiences
      </h2>
      <Experience />
    </SectionContainer>
    <SectionContainer id="projects">
      <h2 class="text-3xl font-semibold mb-8 flex gap-x-3 items-center">
        <CodingIcon class="size-8" />
        Projects
      </h2>
      <Projects />
    </SectionContainer>
    <SectionContainer id="skills">
      <h2 class="text-3xl font-semibold mb-8 flex gap-x-3 items-center">
        <StackIcon class="size-8" />
        Skills
      </h2>
      <Skills />
    </SectionContainer>
    <!-- <SectionContainer id="about">
      <h2 class="text-3xl font-semibold mb-8 flex gap-x-3 items-center">
        <UserIcon class="size-8" />
        About Me
      </h2>
      <About />
    </SectionContainer> -->
  </main>
</Layout>
